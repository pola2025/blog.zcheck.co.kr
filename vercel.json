{
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [{ "source": "/blog/:path*", "destination": "/:path*" }],
  "functions": {
    "api/cron/auto-generate.js": { "maxDuration": 300 },
    "api/cron/publish-social.js": { "maxDuration": 300 }
  },
  "crons": [
    {
      "path": "/api/cron/auto-generate",
      "schedule": "0 21 * * *"
    },
    {
      "path": "/api/cron/publish-social",
      "schedule": "0 0 * * *"
    }
  ]
}
