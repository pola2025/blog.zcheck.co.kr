{
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/blog/:path*", "destination": "/:path*" }
  ],
  "crons": [
    {
      "path": "/api/cron/publish-social",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/generate-content",
      "schedule": "0 12 * * *"
    }
  ],
  "functions": {
    "api/cron/generate-content.js": {
      "maxDuration": 60
    }
  }
}
